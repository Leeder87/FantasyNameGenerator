@model FantasyNameGen.Models.Name
@{
    ViewBag.Title = "Добавление имени";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="RomanName" class="control-label">Имя</label>
        <input type="text" asp-for="RomanName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CyrilName" class="control-label">Транскрипция</label>
        <input type="text" asp-for="CyrilName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label">Пол</label>
        <input type="text" asp-for="Gender" class="form-control" />
    </div>   
    <div class="form-group">
        <label asp-for="Variants" class="control-label">Варианты</label>
        <input type="text" asp-for="Variants" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>